.content {
  font-size: 30px
}

*::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

*::-webkit-scrollbar-track {
  background: $codeBgColor;
  border-radius: 2px;
}

*::-webkit-scrollbar-thumb {
  background: $accentColor;
  border-radius: 8px;
}

*::-webkit-scrollbar-thumb:hover {
  background: $borderColor;
}

*::-webkit-scrollbar-corner {
  background: $badgeErrorColor;
}